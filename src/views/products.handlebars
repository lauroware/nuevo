<html>

  <head>
    <title>Bienvenido {{usr.first_name}}</title>
    <style>
      body { font-family: Arial, sans-serif; background-color: #f7f7f7; } h3 {
      color: #1976d2; text-align: center; margin-top: 20px; } button { display:
      block; margin: 20px auto; padding: 10px 20px; font-size: 16px; color:
      #fff; background-color: #d32f2f; border: none; border-radius: 4px; cursor:
      pointer; transition: background-color 0.3s; } button:hover {
      background-color: #b71c1c; } form { margin: 20px auto; padding: 20px;
      max-width: 500px; background-color: #fff; border-radius: 4px; box-shadow:
      0 2px 5px rgba(0, 0, 0, 0.1); } h3.product-title { color: #1976d2; }
      p.product-info { color: #666; } p#pid { color: #1976d2; font-weight: bold;
      } button#btnToCart { display: block; margin-top: 10px; padding: 8px 16px;
      font-size: 14px; color: #fff; background-color: #4caf50; border: none;
      border-radius: 4px; cursor: pointer; transition: background-color 0.3s; }
      button#btnToCart:hover { background-color: #45a049; }
    </style>
  </head>

  <body>
    <h3>Bienvenido {{usr.first_name}}</h3>
    <div>
      <button onclick="location.href='/users/logout'" id="logout">Cerrar sesión</button>
      <button onclick="location.href='/carts/{{cartId}}'" id="verCarrito">Ver
        carrito</button>
    </div>

    {{#each products}}
      <form action="api/carts/POST/{{cartId}}/product/{{id}}" method="POST">
        <h3 class="product-title">{{title}}</h3>
        <p class="product-info">Descripción: {{description}}</p>
        <p class="product-info">Precio: {{price}}</p>
        <p class="product-info">Código: {{code}}</p>
        <p class="product-info">Stock: {{stock}}</p>
        <p class="product-info">Categoría: {{category}}</p>
        <p class="product-info">Miniaturas: {{thumbnails}}</p>
        <p class="product-info">ID: <span id="pid">{{id}}</span></p>
        <input type="hidden" name="productId" value="{{id}}" />
        <button type="submit" id="btnToCart">Agregar al carrito</button>
      </form>
    {{/each}}

    <script src="/socket.io/socket.io.js"></script>
    <script src="/src/public/js/cart.js"></script>
  </body>

</html>